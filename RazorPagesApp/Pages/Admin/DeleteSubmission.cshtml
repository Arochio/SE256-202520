@page
@model RazorPagesApp.Pages.Admin.DeleteSubmissionModel
@{
	ViewData["Title"] = "DeleteSubmission";
}

<h1>Delete Submission</h1>
<h3>Are you sure you want to delete this?</h3>
<div class="text-center">

    <table class="table table-bordered table-sm table-striped">
        <thead>
            <tr>
                <th>Type</th>
                <th>Song</th>
                <th>Artist</th>
                <th>Notes</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @if (Model == null)
            {
                <tr>
                    <td colspan="7" class="text-center">No Model</td>
                </tr>
            }
            else
            {
                    <tr>
                        <td>@Model.delSubmission.Submission_Type</td>
                        <td>@Model.delSubmission.Submission_Song</td>
                        <td>@Model.delSubmission.Submission_Artist</td>
                        <td>@Model.delSubmission.Submission_Notes</td>
                        <td>@Model.delSubmission.Submission_Email</td>
                    </tr>
            }
        </tbody>
    </table>

	<form method="post">
		<input type="hidden" asp-for="delSubmission.Submission_ID" />
		<input type="submit" value="Delete" />
		<a asp-page="/Admin/ControlPanel">Back to List</a>
	</form>
</div>
@page
@model RazorPagesApp.Pages.Admin.ControlPanelModel
@{
	ViewData["Title"] = "Control Panel";
}
<h1>Control Panel</h1>

<div class="text-center">

    <table class="table table-bordered table-sm table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Type</th>
                <th>Song</th>
                <th>Artist</th>
                <th>Notes</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @if (Model == null)
            {
                <tr>
                    <td colspan="7" class="text-center">No Model</td>
                </tr>
            }
            else
            {
                @foreach (var p in Model.songs)
                {
                    <tr>
                        <td>@p.Submission_ID</td>
                        <td>@p.Submission_Type</td>
                        <td>@p.Submission_Song</td>
                        <td>@p.Submission_Artist</td>
                        <td>@p.Submission_Notes</td>
                        <td>@p.Submission_Email</td>
                        <td><a asp-page="/Admin/EditTicket" asp-route-id="@p.Submission_ID">Edit</a></td>
                        <td><a asp-page="/Admin/DeleteTicket" asp-route-id="@p.Submission_ID">Delete</a></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
